#!/usr/bin/env bash
#
# Computer, become self-aware.
#
# This script is now a wrapper that delegates to `dot install`
# for a unified dotfiles management experience.

cd "$(dirname $0)"/..
DOTFILES_ROOT=$(pwd -P)

set -e

# Check if dot command exists
if [ -x "$DOTFILES_ROOT/bin/dot" ]; then
	exec "$DOTFILES_ROOT/bin/dot" install
else
	echo "Error: dot command not found at $DOTFILES_ROOT/bin/dot"
	exit 1
fi
